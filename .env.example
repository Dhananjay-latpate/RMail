# =============================================================================
# RMail Multi-Organization Mail Server - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values before running docker compose up.

# ---- PostgreSQL Database Settings ----
POSTGRES_DB=stalwart
POSTGRES_USER=stalwart
POSTGRES_PASSWORD=stalwart_secret

# ---- Admin Settings ----
# Password for the fallback administrator account (user: admin)
ADMIN_SECRET=changeme

# ---- Server Settings ----
# The primary hostname for this mail server
MAIL_HOSTNAME=mail.example.com
